# Modo de ejecución: development o release

IN_MODE=development # Modo de desarrollo para recarga automática y depuración

# Configuración de CORS
CORS_ALLOW_ALL_ORIGINS=true  # true para permitir todos los orígenes, false para usar CORS_ALLOWED_ORIGINS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://app.example.com  # Lista de orígenes permitidos separados por comas
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH # Métodos HTTP permitidos
CORS_ALLOW_HEADERS=Origin,Content-Type,Accept,Authorization,X-Request-ID,X-User-ID,X-Session-ID # Encabezados permitidos
CORS_EXPOSE_HEADERS=Content-Length,Content-Type # Encabezados expuestos al cliente
CORS_ALLOW_CREDENTIALS=true # true para permitir credenciales (cookies, auth headers)
CORS_MAX_AGE=43200  # 12 horas en segundos
# Configuración de Proxy (para eliminar el warning de Gin)
TRUSTED_PROXIES=127.0.0.1,::1  # Solo localhost, o puedes poner las IPs de tus proxies reales

# Credenciales de AWS
AWS_ACCESS_KEY_ID= # Reemplaza con tu Access Key ID de AWS
AWS_SECRET_ACCESS_KEY=  # Reemplaza con tu Secret Access Key de AWS
AWS_REGION=us-west-2 # Región de AWS
AWS_PROFILE=  # Perfil de AWS CLI

# Credenciales de AZURE
AZURE_API_KEY=" " # Reemplaza con tu clave API de Azure
AZURE_RESOURCE_NAME=" " # Reemplaza con el nombre de tu recurso de Azure
AZURE_ENDPOINT="https://------.azure.com/" # Reemplaza con tu endpoint de Azure
AZURE_DEFAULT_MODEL="gpt-4.1" # Modelo por defecto de Azure
AZURE_API_VERSION="2025-01-01-preview" # Versión de la API de Azure

# Credenciales de REDIS (Azure Redis Cache con SSL)
REDIS_URL=" " # URL de conexión a Redis con SSL

# Configuración del Sistema de Sesiones
ENABLE_SESSION_MANAGEMENT=false  # Activado para usar sesiones
USE_REDIS_CACHE=true  # Usar Redis para caché de sesiones
SESSION_MAX_MESSAGES=50   # Máximo de mensajes por sesión
SESSION_CACHE_TTL=86400  # 24 horas en segundos
SESSION_CONTEXT_WINDOW=100  # Últimos N mensajes para contexto

# PostgreSQL (no requerido si USE_DATABASE_PERSISTENCE=false)
POSTGRES_URL= 
USE_DATABASE_PERSISTENCE=false # No usar PostgreSQL por ahora


# Configuración del servidor
SERVER_PORT=50051 # Puerto del servidor gRPC
HTTP_PORT=8090 # Puerto del servidor HTTP
WS_PORT=8091 #  Puerto del servidor WebSocket
GRPC_PORT=50051 # Puerto del servidor gRPC

# Configuración de caché
CACHE_TTL=3600 # Tiempo de vida de la caché en segundos (1 hora)
CACHE_ENABLED=true # Activar caché
USE_REDIS=true  # Activar Redis para caché

# Configuración de modelos
AWS_DEFAULT_MODEL=claude-3-sonnet  # Modelo por defecto de AWS
AZURE_DEFAULT_MODEL=gpt-4o # Modelo por defecto de Azure
DEFAULT_PROVIDER=azure # Proveedor por defecto: aws o azure
MAX_TOKENS=4000 # Máximo de tokens por solicitud
TEMPERATURE=0.7 # Temperatura por defecto para generación de texto

# Configuración del WorkerPool
ENABLE_PARALLEL_MODE=true # Activar modo paralelo
POOL_MIN_WORKERS=32 # Mínimo de trabajadores
POOL_MAX_WORKERS=512  # Máximo de trabajadores
POOL_QUEUE_SIZE=100000  # Tamaño de la cola de tareas
POOL_SCALE_INTERVAL=5s # Intervalo de escalado
POOL_UTILIZATION_TARGET=0.75 # Objetivo de utilización
POOL_MAX_CONCURRENT=10000 # Máximo de tareas concurrentes
POOL_BUFFER_SIZE=65536 # Tamaño del buffer de tareas